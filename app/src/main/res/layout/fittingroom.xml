<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ft_background1">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ft_equipment_parameter" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginBottom="68dp"
                    android:layout_marginLeft="45dp"
                    android:text="name"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginBottom="38dp"
                    android:layout_marginLeft="65dp"
                    android:textColor="#963232"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_attack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginBottom="23dp"
                    android:layout_marginLeft="65dp"
                    android:textColor="#963232"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_criticalAttack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="65dp"
                    android:textColor="#963232"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_defense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#963232"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_critical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="25dp"
                    android:textColor="#963232"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_avoid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="41dp"
                    android:textColor="#963232"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_lucky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="57dp"
                    android:textColor="#963232"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="73dp"
                    android:textColor="#963232"
                    android:textSize="12dp"
                    android:textStyle="bold" />
                <!-- -->
                <TextView
                    android:id="@+id/_hp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginBottom="38dp"
                    android:layout_marginLeft="95dp"
                    android:textColor="#ff8b0f"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_attack2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginBottom="23dp"
                    android:layout_marginLeft="95dp"
                    android:textColor="#ff8b0f"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_criticalAttack2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="95dp"
                    android:textColor="#ff8b0f"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_defense2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#ff8b0f"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_critical2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="25dp"
                    android:textColor="#ff8b0f"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_avoid2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="41dp"
                    android:textColor="#ff8b0f"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_lucky2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="57dp"
                    android:textColor="#ff8b0f"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/_speed2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="73dp"
                    android:textColor="#ff8b0f"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/Lnlv"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="35dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/imago_shadow" />

                <ImageView
                    android:id="@+id/wing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/horn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/neck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/face"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/horn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />
            </FrameLayout>

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/back_mt"
                android:adjustViewBounds="true"
                android:src="@drawable/battle_back" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ft_background3"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/containerpart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/containerpart"
                android:layout_gravity="center"
                android:background="@drawable/ft_background2"
                android:orientation="horizontal">


                <FrameLayout
                    android:id="@+id/frhorn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#8fccf7">

                    <ImageView
                        android:id="@+id/hornpart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:adjustViewBounds="true"
                        android:scaleX="2.2"
                        android:scaleY="2.2" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frhorn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/horn2part"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:adjustViewBounds="true"
                        android:scaleX="2.2"
                        android:scaleY="2.2" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/headpart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        android:adjustViewBounds="true"
                        android:scaleX="2.2"
                        android:scaleY="2.2" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frface"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/facepart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:adjustViewBounds="true"
                        android:scaleX="2.2"
                        android:scaleY="2.2" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frneck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/neckpart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:adjustViewBounds="true"
                        android:scaleX="2.2"
                        android:scaleY="2.2" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frbody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/bodypart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:adjustViewBounds="true"
                        android:scaleX="2.2"
                        android:scaleY="2.2" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frwing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/wingpart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:adjustViewBounds="true"
                        android:scaleX="2.2"
                        android:scaleY="2.2" />
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <GridView
                    android:id="@+id/girdhorn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:numColumns="4" />

                <GridView
                    android:id="@+id/girdhorn2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:numColumns="4"
                    android:visibility="gone" />

                <GridView
                    android:id="@+id/girdhead"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:numColumns="4"
                    android:visibility="gone" />

                <GridView
                    android:id="@+id/girdface"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:numColumns="4"
                    android:visibility="gone" />

                <GridView
                    android:id="@+id/girdbody"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:numColumns="4"
                    android:visibility="gone" />

                <GridView
                    android:id="@+id/girdneck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:numColumns="4"
                    android:visibility="gone" />

                <GridView
                    android:id="@+id/girdwing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:numColumns="4"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/b_arrow_r"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center|right"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/b_arrow_r" />

                <ImageView
                    android:id="@+id/b_arrow_l"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center|left"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/b_arrow_l" />

                <ImageView
                    android:id="@+id/btnChange"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btnChange"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="80dp"
                    android:adjustViewBounds="true"
                    android:alpha="0.7"
                    android:src="@drawable/ft_button_decision" />

                <ImageView
                    android:id="@+id/btnReset"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btnChange"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="80dp"
                    android:adjustViewBounds="true"
                    android:alpha="0.7"
                    android:src="@drawable/ft_button_reset" />

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">

        <com.google.android.gms.ads.doubleclick.PublisherAdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ads:adSize="BANNER"
            ads:adUnitId="/56791129/kabukuwa_Android"></com.google.android.gms.ads.doubleclick.PublisherAdView>
    </LinearLayout>

</LinearLayout>
