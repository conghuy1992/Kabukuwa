<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tj="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:adjustViewBounds="true"
            android:src="@drawable/shop_sell_beetle_window" />

        <RelativeLayout
            android:id="@+id/setwh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/bgcanh"
                    android:layout_width="170px"
                    android:layout_height="170px"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/bghorn2"
                    android:layout_width="170px"
                    android:layout_height="170px"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/bghorn"
                    android:layout_width="170px"
                    android:layout_height="170px"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/bgdau"
                    android:layout_width="170px"
                    android:layout_height="170px"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/bgbody"
                    android:layout_width="170px"
                    android:layout_height="170px"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/bgco"
                    android:layout_width="170px"
                    android:layout_height="170px"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/bgmat"
                    android:layout_width="170px"
                    android:layout_height="170px"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/canh"
                    android:layout_width="@dimen/size_part"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/horn2"
                    android:layout_width="@dimen/size_part"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/dau"
                    android:layout_width="@dimen/size_part"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/body"
                    android:layout_width="@dimen/size_part"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/co"
                    android:layout_width="@dimen/size_part"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/mat"
                    android:layout_width="@dimen/size_part"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/horn"
                    android:layout_width="@dimen/size_part"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />
            </FrameLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="#FF0000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <com.daydelight.kabukuwa.CustomTextView
                android:id="@+id/txtten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="27dp"
                android:text="ten"
                android:textColor="#ffffff"
                android:textSize="9dp"
                android:textStyle="bold"
                tj:textStroke="true"
                tj:textStrokeColor="#000000"
                tj:textStrokeWidth="3.5" />

            <com.daydelight.kabukuwa.CustomTextView
                android:id="@+id/txthang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="15dp"
                android:text="hang"
                android:textColor="#ffffff"
                android:textSize="9dp"
                android:textStyle="bold"
                tj:textStroke="true"
                tj:textStrokeColor="#000000"
                tj:textStrokeWidth="3.5" />

            <com.daydelight.kabukuwa.CustomTextView
                android:id="@+id/txtgiaban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="2dp"
                android:text="gia"
                android:textColor="#ffffff"
                android:textSize="9dp"
                android:textStyle="bold"
                tj:textStroke="true"
                tj:textStrokeColor="#000000"
                tj:textStrokeWidth="3.5" />
        </FrameLayout>

        <ImageView
            android:id="@+id/idloai"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:adjustViewBounds="true"
            android:src="@drawable/mypage_breeding_badge_kabu" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="10dp" />
</LinearLayout>